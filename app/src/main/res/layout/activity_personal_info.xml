<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/id_toolbar"
        layout="@layout/tool_bar_full_layout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lineColor"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/personal_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/personal_img"
                android:layout_width="@dimen/dimen_58dp"
                android:layout_height="@dimen/dimen_58dp"
                android:layout_marginLeft="@dimen/dimen_21dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/simple_drawee_view_bg" />

            <LinearLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen_18dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView style="@style/flag_for_sub_title" />

                    <TextView
                        android:id="@+id/personal_store_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_8dp"
                        android:textColor="@color/color_43484b"
                        android:textSize="@dimen/large"
                        android:text="华景专卖店" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_26dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/personal_store_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="广东省广州市天河区邮通小区西横街08号"
                        android:ellipsize="end"
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="@dimen/small"
                        android:lines="1"/>
                    <TextView
                        android:id="@+id/personal_store_telephone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="@dimen/small"
                        android:text="0755-23629877"/>
                </LinearLayout>

            </LinearLayout>

            <ImageView style="@style/ImageView_ARROW_For_PersonalInfo"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/personal_store_qr_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:background="@color/white">
            <TextView
                style="@style/General_TextVew_For_PersonalInfo"
                android:text="@string/personal_qr_code"/>
            <ImageView style="@style/ImageView_ARROW_For_PersonalInfo"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/personal_store_benefit_coin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_1dp"
            android:background="@color/white">
            <TextView
                style="@style/General_TextVew_For_PersonalInfo"
                android:text="@string/personal_benefit_coin"/>
            <ImageView style="@style/ImageView_ARROW_For_PersonalInfo"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/personal_store_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_1dp"
            android:background="@color/white">
            <TextView
                style="@style/General_TextVew_For_PersonalInfo"
                android:text="@string/personal_store_coupon"/>
            <ImageView style="@style/ImageView_ARROW_For_PersonalInfo"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/personal_store_rewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_1dp"
            android:background="@color/white">
            <TextView
                style="@style/General_TextVew_For_PersonalInfo"
                android:text="@string/personal_store_rewards"/>
            <ImageView style="@style/ImageView_ARROW_For_PersonalInfo"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/personal_store_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:background="@color/white">

            <TextView
                style="@style/General_TextVew_For_PersonalInfo"
                android:text="@string/setting" />

            <ImageView style="@style/ImageView_ARROW_For_PersonalInfo" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>