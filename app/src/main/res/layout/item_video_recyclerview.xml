<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/video_item_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/dimen_12dp"
    android:layout_marginRight="@dimen/dimen_12dp"
    android:layout_height="@dimen/dimen_212dp">
    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/below_16dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dimen_4dp"
            android:layout_height="@dimen/below_14dp"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:background="@color/color_ff7000"/>
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/large"
            android:textColor="@color/color_43484b"
            android:layout_marginLeft="@dimen/dimen_11dp"
            android:layout_marginRight="@dimen/below_20dp"
            android:lines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:text="Title"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/title_rl"
        android:layout_marginLeft="@dimen/below_14dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/author_name"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dimen_84dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_9b9b9b"
            android:textSize="@dimen/small"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="zuozhe"
            />
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/page_view_count"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small"
            android:text="12345转发数"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dimen_13dp"
        android:layout_marginBottom="@dimen/dimen_9dp"
        android:background="@drawable/simple_drawee_view_bg">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/content_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_3dp"
            android:layout_marginRight="@dimen/dimen_3dp"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <View
        android:id="@+id/line_view"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lineColor"/>



</LinearLayout>