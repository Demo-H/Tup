<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/id_toolbar"
        layout="@layout/tool_bar_full_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_58dp"
        android:background="@color/white">
        <ImageView style="@style/flag_for_sub_title" />
        <TextView
            style="@style/sub_title"
            android:text="@string/select_purifier"
            android:textSize="@dimen/large_19sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_243dp"
        android:background="@color/white">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_14dp"
            android:layout_marginRight="@dimen/dimen_14dp"
            fresco:placeholderImage="@mipmap/p2"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundedCornerRadius="@dimen/dimen_4dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120dp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/have"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_member_label_select_text"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_marginRight="@dimen/dimen_12dp"
            android:text="@string/have"
            android:gravity="center"
            android:textColor="@drawable/selector_member_label_select_text"
            android:textSize="@dimen/large_19sp"/>
        <TextView
            android:id="@+id/not_have"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_member_label_select_text"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_marginRight="@dimen/dimen_12dp"
            android:text="@string/not_have"
            android:gravity="center"
            android:textColor="@drawable/selector_member_label_select_text"
            android:textSize="@dimen/large_19sp"/>

    </LinearLayout>

</LinearLayout>