<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_72dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/product_img"
                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_centerVertical="true"
                android:background="@drawable/simple_drawee_view_bg"
                android:layout_marginLeft="@dimen/dimen_14dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/title_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/large"
                android:textColor="@color/color_43484b"
                android:layout_marginRight="@dimen/dimen_30dp"
                android:ellipsize="end"
                android:textStyle="bold"
                android:text="Title"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_11dp">

                <TextView
                    android:id="@+id/goods_number"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/dimen_84dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="@dimen/small"
                    android:ellipsize="end"
                    android:text="货号：1372108"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dimen_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small"
                    android:text="@string/current_inventory"
                    />
                <TextView
                    android:id="@+id/current_inventory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23"
                    android:textColor="@color/color_ff7000"
                    android:textSize="@dimen/small"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>