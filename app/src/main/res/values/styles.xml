    <style name="AppThemeBtn">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@drawable/selector_white_btn_text</item>
        <item name="android:textSize">@dimen/normal</item>
        <item name="android:padding">@dimen/separation_large</item>
        <item name="android:background">@drawable/app_theme_btn_selector</item>
    </style>

    <!--5.0以下无水波纹效果-->
    <style name="view_click_bg">
    </style>

    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <!--你的layout背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--屏幕其他地方是否模糊变黑-->
        <!--<item name="android:backgroundDimEnabled">true</item>-->
    </style>

    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>


    <!-- 弧形button -->
    <style name="not_fill_button">
        <item name="android:layout_height">@dimen/dimen_38dp</item>
        <item name="android:layout_width">@dimen/dimen_158dp</item>
        <item name="android:textColor">@color/color_9b9b9b</item>
        <item name="android:background">@drawable/bg_button_not_fill</item>
        <item name="android:textSize">@dimen/small</item>
        <item name="android:gravity">center</item>
    </style>



    <!-- 弧形整个屏幕大button -->
    <style name="not_fill_button_full">
        <item name="android:textColor">@color/color_ff7000</item>
        <item name="android:background">@drawable/bg_button_not_fill_full</item>
        <item name="android:textSize">@dimen/normal</item>
        <item name="android:gravity">center</item>

    </style>

    <!-- 弧形整个屏幕大button填充主题色 -->
    <style name="fill_button_full_main">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button_normal</item>
        <item name="android:textSize">@dimen/normal</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 弧形整个屏幕大button填充背景色 -->
    <style name="fill_button_full_bg">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button_cancle_dispaly</item>
        <item name="android:textSize">@dimen/normal</item>
        <item name="android:gravity">center</item>

    </style>


    <!-- 标题属性 -->
    <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 小标题前面的标记 -->
    <style name="flag_for_sub_title">
        <item name="android:layout_width">@dimen/dimen_4dp</item>
        <item name="android:layout_height">@dimen/dimen_14dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dimen_14dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@color/color_ff7000</item>
    </style>

    <!-- 小标题 -->
    <style name="sub_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="android:textColor">@color/color_43484b</item>
        <item name="android:layout_marginLeft">@dimen/dimen_24dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 经验问答标题 -->
    <style name="experience_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="android:textColor">@color/color_43484b</item>
        <item name="android:layout_marginLeft">@dimen/dimen_14dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 订单部分普通文本 -->
    <style name="general_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/normal</item>
        <item name="android:textColor">@color/color_43484b</item>
        <item name="android:layout_marginLeft">@dimen/dimen_14dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- 右侧部分文本 -->
    <style name="right_general_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/small</item>
        <item name="android:textColor">@color/color_43484b</item>
        <item name="android:layout_marginRight">@dimen/dimen_14dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <!-- 粗分割线 -->
