<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/target_title_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/target_me_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/below_20dp"
                android:layout_marginTop="@dimen/dimen_18dp"
                android:text="@string/target_me_title"
                android:textColor="@color/color_43484b"
                android:textSize="@dimen/s_large" />

            <TextView
                android:id="@+id/target_me_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/below_20dp"
                android:layout_marginTop="@dimen/dimen_7dp"
                android:text="@string/target_me_sub_title"
                android:textColor="@color/color_9b9b9b"
                android:textSize="@dimen/small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/choose_dian_name_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_18dp"
            android:layout_marginTop="@dimen/dimen_18dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dian_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="东莞长安店"
                android:textColor="@color/color_9b9b9b"
                android:textSize="@dimen/normal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/switch_arrow_ic" />

        </LinearLayout>
    </RelativeLayout>

    <com.android.dhunter.common.widget.mzBannerView.MZBannerView
        android:id="@+id/target_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_136dp"
        android:layout_marginTop="@dimen/dimen_9dp"
        android:layout_marginLeft="@dimen/dimen_13dp"
        android:layout_marginRight="@dimen/dimen_13dp"
        app:open_mz_mode="false"
        app:middle_page_cover="false"
        app:canLoop="true"
        app:indicatorAlign="center"
        app:indicatorPaddingBottom="@dimen/dimen_0dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/lineColor"
        />


</LinearLayout>