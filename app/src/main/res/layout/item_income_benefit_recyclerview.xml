<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_65dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_14dp">
        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_43484b"
            android:textSize="@dimen/normal"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_c2c2c2"
                android:textSize="@dimen/small"
                android:layout_marginTop="@dimen/dimen_6dp"/>
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_9dp"
                android:textColor="@color/color_c2c2c2"
                android:textSize="@dimen/small"
                android:layout_marginTop="@dimen/dimen_6dp"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/integral_money"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="+200"
        android:layout_marginRight="@dimen/dimen_14dp"
        android:textColor="@color/color_009944"
        android:textSize="@dimen/s_large"
        android:gravity="center_vertical"/>

</LinearLayout>