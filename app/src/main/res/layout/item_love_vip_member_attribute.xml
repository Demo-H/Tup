<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dimen_100dp"

    android:background="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_53dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/very_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/very_vip"
                android:textColor="@color/color_43484b"
                android:textSize="@dimen/small"/>
            <TextView
                android:id="@+id/very_vip_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/very_vip"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:text="65"
                android:textColor="@color/title_ff7000"
                android:textSize="@dimen/s_large"/>
        </RelativeLayout>
        <View
            android:layout_alignParentRight="true"
            android:layout_width="1dp"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:layout_marginBottom="@dimen/dimen_6dp"
            android:layout_marginLeft="@dimen/dimen_26dp"
            android:layout_height="match_parent"
            android:background="@color/lineColor"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_26dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/general_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_vip"
                android:textColor="@color/color_43484b"
                android:textSize="@dimen/small"/>
            <TextView
                android:id="@+id/general_vip_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/general_vip"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:text="89"
                android:textColor="@color/color_ffbc1b"
                android:textSize="@dimen/s_large"/>
        </RelativeLayout>

    </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/dimen_124dp"
            android:layout_marginLeft="@dimen/below_45dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/mPieChart"
                android:layout_width="@dimen/dimen_70dp"
                android:layout_height="@dimen/dimen_70dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

</RelativeLayout>
