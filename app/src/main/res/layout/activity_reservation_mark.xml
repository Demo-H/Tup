<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/id_toolbar"
        layout="@layout/tool_bar_full_layout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/lineColor">

        <RelativeLayout
            android:id="@+id/input_wechat_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_menu"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:visibility="visible">


            <EditText
                android:id="@+id/input_wechat_code_edit"
                style="@style/TextBlack.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_28dp"
                android:layout_marginLeft="@dimen/dimen_28dp"
                android:background="@null"
                android:hint="@string/input_wechat_code_hint"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/input_addr_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_90dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/input_addr_code_edit"
                style="@style/TextBlack.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_13dp"
                android:layout_marginLeft="@dimen/dimen_13dp"
                android:background="@null"
                android:hint="@string/input_addr_code_hint"/>
        </RelativeLayout>

    </LinearLayout>



</LinearLayout>