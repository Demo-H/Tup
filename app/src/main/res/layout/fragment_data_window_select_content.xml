<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/target_me_sale"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/actual_sale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/actual_sale"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="@dimen/normal"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/actual_sale_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/actual_sale"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:text="37499"
                    android:textColor="@color/color_43484b"
                    android:textSize="@dimen/normal"
                    android:gravity="center"/>
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dimen_26dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_26dp"
                android:background="@color/lineColor" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/target"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/target_sale"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="@dimen/normal"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/target_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/target"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:text="35520"
                    android:textColor="@color/color_43484b"
                    android:textSize="@dimen/normal"
                    android:gravity="center"/>
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dimen_26dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_26dp"
                android:background="@color/lineColor" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/target_margin"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="@dimen/normal"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/margin_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/margin"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:text="1476"
                    android:textColor="@color/color_ff0000"
                    android:textSize="@dimen/normal"
                    android:gravity="center"/>
            </RelativeLayout>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/point_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/selected_ic"/>
        <ImageView
            android:id="@+id/point_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/normal_ic"/>
        <ImageView
            android:id="@+id/point_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/normal_ic"/>
    </LinearLayout>

</LinearLayout>