    </style>

    <style name="TextBlack.XSmall" parent="TextBlack">
        <item name="android:textSize">@dimen/x_small</item>
    </style>

    <style name="TextBlack.Small" parent="TextBlack">
        <item name="android:textSize">@dimen/small</item>
    </style>

    <style name="TextBlack.Large" parent="TextBlack">
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="TextBlack.XLarge" parent="TextBlack">
        <item name="android:textSize">@dimen/x_large</item>
    </style>

    <style name="TextGray.XSmall" parent="TextGray">
        <item name="android:textSize">@dimen/x_small</item>
    </style>

    <style name="TextGray.Small" parent="TextGray">
        <item name="android:textSize">@dimen/small</item>
    </style>

    <style name="TextGray.Normal" parent="TextGray">
        <item name="android:textSize">@dimen/normal</item>
    </style>

    <style name="TextGray.Large" parent="TextGray">
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="TextGray.XLarge" parent="TextGray">
        <item name="android:textSize">@dimen/x_large</item>
    </style>
    <style name="TextGrayDark.XSmall" parent="TextGrayDark">
        <item name="android:textSize">@dimen/x_small</item>
    </style>

    <style name="TextGrayDark.Small" parent="TextGrayDark">
