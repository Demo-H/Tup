<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dimen_79dp"
    android:orientation="horizontal"
    android:background="@color/white">
    <com.android.dhunter.common.widget.percentlayout.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/youhuiquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/below_14dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/meb_gift_ic"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_toRightOf="@id/youhuiquan"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/youhuiquan_follow_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/member_follow"
                android:textSize="@dimen/x_small"/>
            <TextView
                android:id="@+id/youhuiquan_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/youhuiquan_deadline"
                android:textSize="@dimen/normal"/>
        </LinearLayout>
        <View
            android:layout_alignParentRight="true"
            android:layout_width="1dp"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:layout_marginBottom="@dimen/dimen_6dp"
            android:layout_height="match_parent"
            android:background="@color/lineColor"
            />

    </com.android.dhunter.common.widget.percentlayout.PercentRelativeLayout>
    <com.android.dhunter.common.widget.percentlayout.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/huijinbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/below_14dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/meb_con_ic"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_toRightOf="@id/huijinbi"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/huijinbi_follow_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/member_follow"
                android:textSize="@dimen/x_small"/>
            <TextView
                android:id="@+id/huijinbi_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/huijinbi_deadline"
                android:textSize="@dimen/normal"/>
        </LinearLayout>
        <View
            android:layout_alignParentRight="true"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/lineColor"
            />

    </com.android.dhunter.common.widget.percentlayout.PercentRelativeLayout>

</LinearLayout>

