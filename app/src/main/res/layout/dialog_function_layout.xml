<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/dimen_330dp"
    android:layout_height="wrap_content"
    android:background="@drawable/loading_dialog_bg"
    android:layout_gravity="center">

    <!--<RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cancel_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:layout_marginRight="@dimen/dimen_14dp"
            android:src="@mipmap/msg_pop_close_ic"/>
    </RelativeLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_72dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/product_img"
                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_centerVertical="true"
                android:background="@drawable/simple_drawe_view_bg_stroke"
                android:layout_marginLeft="@dimen/dimen_27dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/title_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/large"
                android:textColor="@color/color_43484b"
                android:layout_marginRight="@dimen/dimen_30dp"
                android:lines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:text="TUP茶韵保温瓶500ml"    />

            <TextView
                android:id="@+id/goods_number"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_9b9b9b"
                android:textSize="@dimen/small"
                android:lines="1"
                android:ellipsize="end"
                android:text="货号：1372108"
                android:layout_marginTop="@dimen/dimen_11dp"/>

        </LinearLayout>

    </LinearLayout>
    <View style="@style/thin_separation_line"
        android:layout_marginLeft="@dimen/dimen_27dp"
        android:layout_marginRight="@dimen/dimen_27dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inventory"
                android:layout_marginLeft="@dimen/dimen_27dp"
                android:textColor="@color/color_43484b"
                android:textSize="@dimen/small"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/inventory_in_count_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sale_increase_btn"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_27dp"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/inventory_in_count_text"
                android:layout_width="@dimen/dimen_98dp"
                android:layout_height="@dimen/dimen_35dp"
                android:layout_toLeftOf="@id/inventory_in_count_add"
                android:layout_marginRight="@dimen/dimen_13dp"
                android:text="0"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:background="@drawable/bg_edittext_sale_record_detial"
                android:textColor="@color/color_43484b"
                android:textSize="@dimen/normal"
                android:inputType="number"/>
            <ImageView
                android:id="@+id/inventory_in_count_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sale_reduce_btn"
                android:layout_toLeftOf="@id/inventory_in_count_text"
                android:layout_marginRight="@dimen/dimen_13dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_27dp"
                android:layout_centerVertical="true"
                android:textColor="@color/color_43484b"
                android:textSize="@dimen/small"
                android:text="@string/shipment"/>
            <ImageView
                android:id="@+id/goods_in_count_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sale_increase_btn"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_27dp"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/goods_in_count_text"
                android:layout_width="@dimen/dimen_98dp"
                android:layout_height="@dimen/dimen_35dp"
                android:layout_toLeftOf="@id/goods_in_count_add"
                android:layout_marginRight="@dimen/dimen_13dp"
                android:text="0"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:background="@drawable/bg_edittext_sale_record_detial"
                android:textColor="@color/color_43484b"
                android:textSize="@dimen/normal"
                android:inputType="number"/>
            <ImageView
                android:id="@+id/goods_in_count_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sale_reduce_btn"
                android:layout_toLeftOf="@id/goods_in_count_text"
                android:layout_marginRight="@dimen/dimen_13dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>

    <View style="@style/thin_separation_line"
        android:layout_marginLeft="@dimen/dimen_27dp"
        android:layout_marginRight="@dimen/dimen_27dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/cancel"
            android:text="@string/cancel"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_35dp"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_24dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:background="@drawable/bg_button_cancle_textview"
            android:gravity="center"
            android:textSize="@dimen/small"
            android:textColor="@color/color_9b9b9b"
            android:state_selected="true"/>
        <TextView
            android:id="@+id/complete"
            android:text="@string/affirm"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_35dp"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_24dp"
            android:background="@drawable/bg_button_normal"
            android:gravity="center"
            android:textSize="@dimen/small"
            android:textColor="@color/white"
            android:state_selected="true"/>
    </LinearLayout>

</LinearLayout>