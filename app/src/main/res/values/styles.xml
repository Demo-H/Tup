    <!-- Title Fragment-->
    <style name="TitleFragmentBackTxt" parent="TextWhite.Small">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">@dimen/separation_small</item>
        <item name="android:paddingLeft">@dimen/back_padding_left</item>
        <item name="android:paddingRight">@dimen/back_padding_right</item>
