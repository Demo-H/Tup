<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_72dp"
        android:layout_marginLeft="@dimen/dimen_14dp"
        android:layout_marginRight="@dimen/dimen_14dp"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:layout_marginBottom="@dimen/dimen_6dp"
        android:orientation="vertical">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/coupon_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_coupon_simple_image"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_22dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_coupon_linearlayout"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:text="朱小姐"
                android:textColor="@color/white"
                android:textSize="@dimen/x_small"/>
            <TextView
                android:id="@+id/user_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:textColor="@color/white"
                android:textSize="@dimen/x_small"
                android:text="15989026182"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-01-23 14:00"
                android:textColor="@color/white"
                android:textSize="@dimen/x_small"
                android:layout_marginRight="@dimen/dimen_14dp"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>