<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_65dp"
    android:background="@color/color_ff7000"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_date"
        android:textColor="@color/color_ffc293"
        android:textSize="@dimen/x_small" />

    <LinearLayout
        android:id="@+id/date_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_29dp"
        android:layout_marginLeft="@dimen/below_14dp"
        android:layout_marginRight="@dimen/below_14dp"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/before_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow_left_btn"
            android:layout_marginRight="@dimen/dimen_42dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/select_day"
            android:layout_width="@dimen/dimen_143dp"
            android:layout_height="@dimen/dimen_27dp"
            android:background="@drawable/bg_button_sale_history_date"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/normal" />

        <ImageView
            android:id="@+id/after_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_42dp"
            android:src="@mipmap/arrow_right_btn"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>
