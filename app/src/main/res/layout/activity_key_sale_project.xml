<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/id_toolbar"
        layout="@layout/tool_bar_full_layout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipe_target"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/purpose_vip_enter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_97dp"
                    android:layout_marginLeft="@dimen/dimen_14dp"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@drawable/bg_linearlayout_key_sale"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_25dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/mbr_addmbr_ic"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_29dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_22dp"
                        android:text="@string/vip_enter"
                        android:textColor="@color/color_43484b"
                        android:textSize="@dimen/normal"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="@dimen/dimen_25dp"
                    style="@style/thin_separation_line" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    style="@style/sub_title"
                    android:text="@string/action_reservation"
                    android:layout_marginTop="@dimen/dimen_27dp"
                    android:layout_marginLeft="@dimen/dimen_14dp"/>
                <TextView
                    style="@style/general_text"
                    android:text="@string/service_after_sale_reservation"
                    android:textColor="@color/color_9b9b9b"
                    android:layout_marginTop="@dimen/dimen_8dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_14dp"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:layout_marginTop="@dimen/dimen_22dp">
                    <ImageView
                        android:id="@+id/mbr_pure_ic"
                        android:layout_width="@dimen/dimen_97dp"
                        android:layout_height="@dimen/dimen_97dp"
                        android:background="@drawable/bg_linearlayout_key_sale"
                        android:src="@mipmap/mbr_pure_ic"
                        android:layout_alignParentLeft="true"/>
                    <ImageView
                        android:id="@+id/mbr_box_ic"
                        android:layout_width="@dimen/dimen_97dp"
                        android:layout_height="@dimen/dimen_97dp"
                        android:background="@drawable/bg_linearlayout_key_sale"
                        android:src="@mipmap/mbr_box_ic"
                        android:layout_centerInParent="true"/>
                    <ImageView
                        android:id="@+id/mbr_kit_ic"
                        android:layout_width="@dimen/dimen_97dp"
                        android:layout_height="@dimen/dimen_97dp"
                        android:background="@drawable/bg_linearlayout_key_sale"
                        android:src="@mipmap/mbr_kit_ic"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <View
                    android:layout_marginTop="@dimen/dimen_27dp"
                    style="@style/thin_separation_line" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/purpose_member_follow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_97dp"
                    android:layout_marginLeft="@dimen/dimen_14dp"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@drawable/bg_linearlayout_key_sale"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_24dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/mbr_user_ic"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_35dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_27dp"
                        android:text="@string/vip_follow"
                        android:textColor="@color/color_43484b"
                        android:textSize="@dimen/normal"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/customer_service_manager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_97dp"
                    android:layout_marginLeft="@dimen/dimen_14dp"
                    android:layout_marginRight="@dimen/dimen_14dp"
                    android:background="@drawable/bg_linearlayout_key_sale"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_18dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/mbr_after_ic"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_29dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_22dp"
                        android:text="@string/customer_service_manager"
                        android:textColor="@color/color_43484b"
                        android:textSize="@dimen/normal"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>