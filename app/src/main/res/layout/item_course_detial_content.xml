<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_course_content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_66dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_05dp"
        android:layout_marginLeft="@dimen/dimen_24dp"
        android:layout_marginRight="@dimen/dimen_14dp"
        android:background="@color/lineColor"/>
    <LinearLayout
        android:id="@+id/section_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dimen_24dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课时01"
            android:textColor="@color/color_43484b"
            android:textSize="@dimen/small"/>
<!--        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:text="00:00"
            android:textColor="@color/color_9b9b9b"
            android:textSize="@dimen/small"
            android:layout_gravity="right"/>-->

    </LinearLayout>
    <View
        android:layout_width="@dimen/dimen_1dp"
        android:layout_height="match_parent"
        android:background="@color/lineColor"
        android:layout_toRightOf="@id/section_ll"
        android:layout_marginLeft="@dimen/dimen_14dp"/>

    <View
        android:id="@+id/circle_point"
        android:layout_width="@dimen/dimen_8dp"
        android:layout_height="@dimen/dimen_8dp"
        android:background="@drawable/bg_view_circle_point"
        android:layout_toRightOf="@id/section_ll"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/style_show"
        android:layout_width="@dimen/dimen_26dp"
        android:layout_height="@dimen/dimen_26dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_30dp"/>

    <TextView
        android:id="@+id/sub_chapter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/circle_point"
        android:layout_marginLeft="@dimen/dimen_11dp"
        android:layout_marginRight="@dimen/dimen_70dp"
        android:layout_centerVertical="true"
        android:textSize="@dimen/normal"
        android:textColor="@color/color_43484b"/>

</RelativeLayout>