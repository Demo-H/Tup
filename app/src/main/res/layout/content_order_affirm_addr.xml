<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp">
        <ImageView style="@style/flag_for_sub_title"/>
        <TextView style="@style/sub_title"
            android:text="@string/logistics_info"/>
        <View style="@style/thin_separation_line" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_88dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_14dp"
                android:text="@string/receiver"
                android:textColor="@color/color_43484b"
                android:textSize="@dimen/small"/>
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_78dp"
                android:textColor="@color/color_43484b"
                android:textSize="@dimen/small"/>
            <TextView
                android:id="@+id/user_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/user_name"
                android:layout_marginLeft="@dimen/dimen_14dp"
                android:textColor="@color/color_9b9b9b"
                android:textSize="@dimen/small"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_7dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_14dp"
                android:text="@string/receiver_addr"
                android:textColor="@color/color_43484b"
                android:textSize="@dimen/small"/>
            <TextView
                android:id="@+id/receiver_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_78dp"
                android:textColor="@color/color_43484b"
                android:textSize="@dimen/small"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>