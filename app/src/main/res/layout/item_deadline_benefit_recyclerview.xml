<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_58dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/dimen_34dp"
        android:layout_height="@dimen/dimen_34dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_14dp"
        android:background="@mipmap/steve_220" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_14dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="朱小姐"
                android:textColor="@color/color_43484b"
                android:textSize="@dimen/normal" />
            <ImageView
                android:id="@+id/user_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/meb_vip_ic"
                android:layout_marginLeft="@dimen/dimen_4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deadline"
                android:textColor="@color/color_c2c2c2"
                android:textSize="@dimen/x_small" />
            <TextView
                android:id="@+id/deadline_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:text="2018-02-23"
                android:textColor="@color/color_c2c2c2"
                android:textSize="@dimen/x_small"/>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/coupon_benefit_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/meb_con_list_ic"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dimen_10dp"/>
    <TextView
        android:id="@+id/coupon_benefit_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="15"
        android:textColor="@color/color_ffa800"
        android:textSize="@dimen/normal"
        android:layout_marginRight="@dimen/dimen_18dp"/>

</LinearLayout>