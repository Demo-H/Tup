<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/id_toolbar"
        layout="@layout/tool_bar_full_layout" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_110dp"
        android:background="@mipmap/mbr_data_bg">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/photo"
            android:layout_width="@dimen/dimen_77dp"
            android:layout_height="@dimen/dimen_77dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_48dp"
            android:background="@mipmap/steve_220"
            fresco:roundedCornerRadius="@dimen/dimen_38dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/photo">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gumi"
                    android:textSize="@dimen/s_large"
                    android:textColor="@color/color_43484b"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/meb_female_ic"/>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>