<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppUIBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- customize the color palette -->
        <item name="colorPrimary">@color/color_eaeaea</item>
        <item name="colorPrimaryDark">@color/color_eaeaea</item>
        <item name="colorAccent">@color/color_ff7000</item>
        <item name="colorControlHighlight">#b7b7b7</item>
    </style>

    <style name="AppBaseTheme.SlideExitAnimation" parent="AppUIBaseTheme">
        <item name="android:windowAnimationStyle">@style/SlideExitAnimation</item>
    </style>

    <style name="SlideExitAnimation" parent="android:style/Animation">
        <item name="android:activityCloseEnterAnimation">@animator/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@animator/slide_right_out</item>
    </style>

    <style name="home_tab_text_view_style_test">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textSize">@dimen/home_tab_text_size</item>
        <item name="android:textColor">@drawable/home_text_default_selector</item>
        <item name="android:drawablePadding">@dimen/dimen_6dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="AppUIBaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@mipmap/login_bg</item>
    </style>

    <style name="TextBlack">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBlack.Normal" parent="TextBlack">
        <item name="android:textSize">@dimen/normal</item>
    </style>

    <style name="TextWhite">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="TextWhite.Small" parent="TextWhite">
        <item name="android:textSize">@dimen/small</item>
    </style>

    <style name="TextWhite.XLarge" parent="TextWhite">
        <item name="android:textSize">@dimen/x_large</item>
