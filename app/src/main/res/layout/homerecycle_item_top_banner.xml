<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/toutiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toutiao_title"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:layout_marginLeft="@dimen/below_20dp"
        android:textColor="@color/color_43484b"
        android:textSize="@dimen/s_large"/>


    <com.android.dhunter.common.widget.mzBannerView.MZBannerView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_178dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        app:open_mz_mode="true"
        app:middle_page_cover="false"
        app:canLoop="true"
        app:indicatorAlign="center"
        />

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/lineColor"
        />

</LinearLayout>