<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/sort_selected_item">

    <TextView
        android:id="@+id/popup_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/dimen_14dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#9b9b9b"
        android:lines="1"
        android:text="1111"
        style="@style/AnimTopRight"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/sort_selected_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_14dp"
        android:background="@drawable/selector_member_sort_selected"/>

</RelativeLayout>