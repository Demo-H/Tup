<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/id_toolbar"
        layout="@layout/tool_bar_full_layout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lineColor"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_27dp"
                android:text="@string/select_interest_goods" />

            <LinearLayout
                android:id="@+id/set_water_cleaner_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_105dp"
                android:layout_marginLeft="@dimen/dimen_14dp"
                android:layout_marginRight="@dimen/dimen_14dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:background="@drawable/bg_linearlayout_select_age"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@mipmap/mbr_prd_1_ic" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dimen_29dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/system_water_cleaner"
                        android:textColor="@color/white"
                        android:textSize="@dimen/large_22sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_tup_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_105dp"
                android:layout_marginLeft="@dimen/dimen_14dp"
                android:layout_marginRight="@dimen/dimen_14dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:background="@drawable/bg_linearlayout_select_age"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@mipmap/mbr_prd_2_ic" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dimen_29dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/set_tup"
                        android:textColor="@color/white"
                        android:textSize="@dimen/large_22sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_take_in_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_105dp"
                android:layout_marginLeft="@dimen/dimen_14dp"
                android:layout_marginRight="@dimen/dimen_14dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:background="@drawable/bg_linearlayout_select_age"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@mipmap/mbr_prd_3_ic" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dimen_29dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/personal_tailor"
                        android:textColor="@color/white"
                        android:textSize="@dimen/large_22sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_kitchen_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_105dp"
                android:layout_marginLeft="@dimen/dimen_14dp"
                android:layout_marginRight="@dimen/dimen_14dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:background="@drawable/bg_linearlayout_select_age"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@mipmap/mbr_prd_4_ic" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dimen_29dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/set_kitchen_pan"
                        android:textColor="@color/white"
                        android:textSize="@dimen/large_22sp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>