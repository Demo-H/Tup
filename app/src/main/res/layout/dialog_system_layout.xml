<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/dimen_330dp"
    android:layout_height="wrap_content"
    android:background="@drawable/loading_dialog_bg"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cancel_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:layout_marginRight="@dimen/dimen_14dp"
            android:src="@mipmap/msg_pop_close_ic"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_38dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top">
            <TextView
                android:id="@+id/title_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/large"
                android:textColor="@color/color_43484b"
                android:layout_marginLeft="@dimen/dimen_27dp"
                android:ellipsize="end"
                android:textStyle="bold"
                android:text="新会员加入提醒"    />

            <TextView
                android:id="@+id/goods_number"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_9b9b9b"
                android:textSize="@dimen/small"
                android:ellipsize="end"
                android:text="2018-01-23 14:00"
                android:layout_marginLeft="@dimen/dimen_27dp" />

        </LinearLayout>

    </LinearLayout>
    <View style="@style/thin_separation_line"
        android:layout_marginLeft="@dimen/dimen_27dp"
        android:layout_marginRight="@dimen/dimen_27dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_38dp"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜您，门店有一位新会员成功注册"
            android:layout_marginLeft="@dimen/dimen_27dp"
            android:textColor="@color/color_9b9b9b"
            android:textSize="@dimen/small"
            android:gravity="center_vertical"/>

    </LinearLayout>


</LinearLayout>