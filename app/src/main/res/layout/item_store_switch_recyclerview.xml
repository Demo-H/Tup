 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <RelativeLayout
        android:id="@+id/store_switch_item_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_72dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/store_img"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="@dimen/dimen_48dp"
            android:layout_marginLeft="@dimen/dimen_14dp"
            android:layout_centerVertical="true"
            android:background="@drawable/simple_drawee_view_bg" />

        <TextView
            android:id="@+id/store_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/store_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/below_20dp"
            android:textColor="@color/color_43484b"
            android:textSize="@dimen/large"/>

        <CheckBox
            android:id="@+id/store_selected"
            android:layout_width="@dimen/below_20dp"
            android:layout_height="@dimen/below_20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_30dp"
            android:background="@drawable/selected_radio_check_selector"
            android:button="@null"
            android:clickable="false"
            android:contentDescription="@null"
            android:focusable="false"/>

    </RelativeLayout>
 </LinearLayout>