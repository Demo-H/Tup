<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/homerecycle_precise_recommendation_ll"
    android:layout_width="@dimen/dimen_110dp"
    android:layout_height="wrap_content">

    <com.android.dhunter.common.widget.imageview.ExpandImageView
        android:id="@+id/precise_recommendation_img"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_70dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/precise_recom_description"
        android:layout_marginTop="@dimen/dimen_11dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_43484b"
        android:textSize="@dimen/small"
        android:text="123"/>

</LinearLayout>