<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/id_toolbar"
        layout="@layout/tool_bar_full_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_58dp"
        android:background="@color/white">
        <ImageView style="@style/flag_for_sub_title" />
        <TextView
            style="@style/sub_title"
            android:text="@string/select_cook"
            android:textSize="@dimen/large_19sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_243dp"
        android:background="@color/white">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_14dp"
            android:layout_marginRight="@dimen/dimen_14dp"
            fresco:placeholderImage="@mipmap/p1"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundedCornerRadius="@dimen/dimen_4dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_50dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/like"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_member_label_select_text"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_marginRight="@dimen/dimen_12dp"
                android:text="@string/like"
                android:gravity="center"
                android:textColor="@drawable/selector_member_label_select_text"
                android:textSize="@dimen/large_19sp"/>
            <TextView
                android:id="@+id/study"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_member_label_select_text"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_marginRight="@dimen/dimen_12dp"
                android:text="@string/study"
                android:gravity="center"
                android:textColor="@drawable/selector_member_label_select_text"
                android:textSize="@dimen/large_19sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:gravity="center">
            <TextView
                android:id="@+id/not_like"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_member_label_select_text"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_marginRight="@dimen/dimen_12dp"
                android:text="@string/not_like"
                android:gravity="center"
                android:textColor="@drawable/selector_member_label_select_text"
                android:textSize="@dimen/large_19sp"/>
            <TextView
                android:id="@+id/not_study"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_member_label_select_text"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_marginRight="@dimen/dimen_12dp"
                android:text="@string/not_study"
                android:gravity="center"
                android:textColor="@drawable/selector_member_label_select_text"
                android:textSize="@dimen/large_19sp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>