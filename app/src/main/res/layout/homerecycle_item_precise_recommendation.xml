<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/precise_recommendation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/precise_recommendation_title"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:layout_marginLeft="@dimen/below_20dp"
        android:textColor="@color/color_43484b"
        android:textSize="@dimen/s_large"/>

    <TextView
        android:id="@+id/precise_recommendation_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_7dp"
        android:layout_marginLeft="@dimen/below_20dp"
        android:textSize="@dimen/small"
        android:textColor="@color/color_9b9b9b"
        android:text="@string/precise_recommendation_sub_title"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/precise_recommendation_content_view"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/below_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:layout_height="@dimen/dimen_1dp"

        android:background="@color/lineColor"
        />
</LinearLayout>