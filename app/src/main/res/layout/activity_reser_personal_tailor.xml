<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/id_toolbar"
        layout="@layout/tool_bar_full_layout" />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/lineColor">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:background="@color/white">
                <ImageView style="@style/flag_for_sub_title"/>
                <TextView
                    style="@style/sub_title"
                    android:text="@string/member_info_detial"/>
                <View style="@style/thin_separation_line" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_14dp"
                    android:layout_marginTop="@dimen/dimen_14dp"
                    android:text="姓名"
                    android:textColor="@color/color_43484b"
                    android:textSize="@dimen/large"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_14dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tel_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_14dp"
                        android:text="159********"
                        android:gravity="center"
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="@dimen/small"/>
                    <TextView
                        android:id="@+id/call_contacts"
                        android:layout_width="@dimen/dimen_53dp"
                        android:layout_height="@dimen/dimen_17dp"
                        android:layout_marginLeft="@dimen/dimen_14dp"
                        android:background="@drawable/bg_textview_not_fill"
                        android:gravity="center"
                        android:text="@string/call_contacts"
                        android:textSize="@dimen/xx_small"
                        android:textColor="@color/color_ff7000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/addr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_14dp"
                        android:gravity="center_vertical"
                        android:text="广州市番禺区番禺大道北383号海印又一城奥特莱斯广场F1"
                        android:textColor="@color/color_43484b"
                        android:textSize="@dimen/small"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/base_info_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:background="@color/white">
                <ImageView style="@style/flag_for_sub_title"/>
                <TextView
                    style="@style/sub_title"
                    android:text="@string/base_info"/>
                <View style="@style/thin_separation_line" />
            </RelativeLayout>
            <com.android.dhunter.common.widget.flowlayout.TagFlowLayout
                android:id="@+id/id_flowlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_14dp"
                android:minHeight="@dimen/dimen_50dp"
                android:background="@color/white"
                zhy:max_select="0">
            </com.android.dhunter.common.widget.flowlayout.TagFlowLayout>

            <RelativeLayout
                android:id="@+id/server_time_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45dp"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:background="@color/white">
                <TextView
                    style="@style/General_TextVew_For_PersonalInfo"
                    android:text="@string/server_time"/>
                <TextView
                    android:id="@+id/server_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/select"
                    android:layout_marginRight="@dimen/dimen_35dp"
                    android:layout_marginLeft="@dimen/dimen_80dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_9b9b9b"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/normal"
                    android:background="@null"/>
                <ImageView style="@style/ImageView_ARROW_For_PersonalInfo"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/waiter_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45dp"
                android:layout_marginTop="@dimen/dimen_1dp"
                android:background="@color/white">
                <TextView
                    style="@style/General_TextVew_For_PersonalInfo"
                    android:text="@string/waiter"/>
                <TextView
                    android:id="@+id/waiter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="张三"
                    android:layout_marginRight="@dimen/dimen_35dp"
                    android:layout_marginLeft="@dimen/dimen_80dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_ff7000"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/normal"
                    android:background="@null"/>
                <ImageView style="@style/ImageView_ARROW_For_PersonalInfo"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/call_contacts_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45dp"
                android:layout_marginTop="@dimen/dimen_1dp"
                android:background="@color/white">
                <TextView
                    style="@style/General_TextVew_For_PersonalInfo"
                    android:text="@string/call_contacts"/>
                <TextView
                    android:id="@+id/call_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="15989026182"
                    android:layout_marginRight="@dimen/dimen_16dp"
                    android:layout_marginLeft="@dimen/dimen_80dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_9b9b9b"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/normal"
                    android:background="@null"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/brand_model_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45dp"
                android:layout_marginTop="@dimen/dimen_1dp"
                android:background="@color/white">
                <TextView
                    style="@style/General_TextVew_For_PersonalInfo"
                    android:text="@string/brand_model"/>
                <TextView
                    android:id="@+id/brand_model"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/select"
                    android:layout_marginRight="@dimen/dimen_35dp"
                    android:layout_marginLeft="@dimen/dimen_80dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_9b9b9b"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/normal"
                    android:background="@null"/>
                <ImageView style="@style/ImageView_ARROW_For_PersonalInfo"/>

            </RelativeLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>