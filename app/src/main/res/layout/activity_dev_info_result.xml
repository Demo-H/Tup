<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_cancel"
        android:layout_width="@dimen/dimen_21dp"
        android:layout_height="@dimen/dimen_21dp"
        android:background="@mipmap/msg_pop_close_ic"
        android:layout_marginLeft="@dimen/dimen_14dp"
        android:layout_marginTop="@dimen/dimen_14dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/sex_result_image"
            android:layout_width="@dimen/dimen_128dp"
            android:layout_height="@dimen/dimen_128dp"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:background="@drawable/bg_circle_image_fill"
            android:gravity="center"
            android:scaleType="center"
            android:src="@mipmap/mbr_female_2_ic"/>
        
        <TextView
            android:id="@+id/age_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_18dp"
            android:text="@string/major"
            android:textColor="@color/color_43484b"
            android:textSize="@dimen/large"/>
    </LinearLayout>

    <com.android.dhunter.common.widget.flowlayout.TagFlowLayout
        android:id="@+id/id_flowlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/dimen_14dp"
        zhy:max_select="0">

    </com.android.dhunter.common.widget.flowlayout.TagFlowLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/have_a_fans"/>
        <TextView
            android:id="@+id/follow_fans"
            android:layout_width="@dimen/dimen_234dp"
            android:layout_height="@dimen/dimen_38dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:text="@string/follow_fans"
            android:gravity="center"
            android:background="@drawable/bg_button_normal"
            android:layout_centerHorizontal="true"/>
    </LinearLayout>

</LinearLayout>