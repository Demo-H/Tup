<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View style="@style/thick_separation_line_no_margintop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_72dp"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/photo"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="@dimen/dimen_48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_29dp"
            android:background="@mipmap/steve_220"
            fresco:roundedCornerRadius="@dimen/dimen_24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_14dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_43484b"
                    android:textSize="@dimen/normal" />
                <ImageView
                    android:id="@+id/sex_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/meb_female_ic"
                    android:layout_marginLeft="@dimen/dimen_4dp"/>
                <ImageView
                    android:id="@+id/wechat_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/meb_wechat_ic"
                    android:layout_marginLeft="@dimen/dimen_4dp"/>
                <ImageView
                    android:id="@+id/vip_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/meb_vip_ic"
                    android:layout_marginLeft="@dimen/dimen_4dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_9dp">
                <TextView
                    android:id="@+id/tel_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="@dimen/small" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View style="@style/thin_separation_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dimen_14dp"
        android:layout_marginRight="@dimen/dimen_14dp">
        <LinearLayout
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coin_balance"
                android:textColor="@color/color_9b9b9b"
                android:textSize="@dimen/small"/>
            <TextView
                android:id="@+id/coin_balance_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_43484b"
                android:textSize="@dimen/normal"
                android:layout_marginTop="@dimen/dimen_10dp"/>

        </LinearLayout>
        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
            android:background="@color/lineColor"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:layout_marginBottom="@dimen/dimen_14dp" />
        <LinearLayout
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coupon_num"
                android:textColor="@color/color_9b9b9b"
                android:textSize="@dimen/small"/>
            <TextView
                android:id="@+id/coupon_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_43484b"
                android:textSize="@dimen/normal"
                android:layout_marginTop="@dimen/dimen_10dp"/>
        </LinearLayout>
        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
            android:background="@color/lineColor"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:layout_marginBottom="@dimen/dimen_14dp" />
        <LinearLayout
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/birthday"
                android:textColor="@color/color_9b9b9b"
                android:textSize="@dimen/small"/>
            <TextView
                android:id="@+id/birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_43484b"
                android:textSize="@dimen/normal"
                android:layout_marginTop="@dimen/dimen_10dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>