<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44dp"
        android:background="@color/title_ff7000"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title"
                android:textColor="@color/white"
                android:text="@string/home_order" />

        </LinearLayout>

        <ImageView
            android:id="@+id/right_search_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dimen_19dp"
            android:layout_height="@dimen/dimen_19dp"
            android:layout_marginRight="@dimen/below_14dp"
            android:src="@mipmap/search_btn" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/order_status_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44dp"
        app:tabIndicatorColor="@color/color_ff7000"
        app:tabTextColor="@color/color_bababa"
        app:tabSelectedTextColor="@color/color_ff7000"
        app:tabIndicatorHeight="@dimen/dimen_1dp">
    </android.support.design.widget.TabLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/online_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>

</LinearLayout>